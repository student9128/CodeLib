<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--背景-->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size
                android:width="86dp"
                android:height="2dp" />
            <corners android:radius="40dp" />
            <solid android:color="@color/FF514D50" />
        </shape>
    </item>

    <!--第二条进度-->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <size
                    android:width="86dp"
                    android:height="2dp" />

                <corners android:radius="40dp" />

                <solid android:color="@color/FFFFFF19" />
            </shape>
        </clip>
    </item>

    <!--进度-->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size
                    android:width="86dp"
                    android:height="2dp" />
                <corners android:radius="40dp" />
                <solid android:color="@color/FFFF8D13" />
            </shape>
        </clip>
    </item>
</layer-list>