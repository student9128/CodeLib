<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="flex_start"
    app:flexWrap="wrap"
    app:justifyContent="flex_start"
    tools:context=".activity.MainActivity">

    <include
        layout="@layout/layout_tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kevin.codelib.customview.ToggleView
        android:id="@+id/tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleBorderWidth="5.0dp"
        app:toggleCheckedColor="@color/colorAccent"
        app:toggleType="rectangle" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleBorderWidth="5.0dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@color/colorPrimary" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleBorderWidth="5.0dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@android:color/holo_red_dark"
        app:toggleType="circleWithThin" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@color/orangePrimary"
        app:toggleType="circleWithThinner" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@color/colorAccent" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@color/colorAccent"
        app:toggleShadow="true"
        app:toggleType="circleWithThinner" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="@color/colorPrimary"
        app:toggleShadow="true"
        app:toggleType="circleWithThinnest" />

    <com.kevin.codelib.customview.ToggleView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:toggleChecked="true"
        app:toggleCheckedColor="#21bf73" />

    <com.kevin.codelib.customview.MyTextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Hello"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

</com.google.android.flexbox.FlexboxLayout>